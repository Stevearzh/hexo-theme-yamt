#header
  padding 20px 0
  margin-bottom 30px
  background-color: color-subject
  a
    color color-white
    &:hover
      color color-white
      text-decoration none
    
  h1
    float left
    font-weight normal
    font-size 2.5em
    line-height 1
    margin-left 25px

  h2
    float left
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 20px
    margin-left 15px
    color color-white
  
  #main-nav
    font-family font-title
    line-height 2.5em
    margin-right 30px
    ul
      list-style none
      li
        float left
        margin-left 30px