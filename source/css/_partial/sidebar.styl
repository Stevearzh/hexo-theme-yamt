#sidebar
  width 270px
  line-height 1.8em
  @media screen and (max-width: 900px)
    float none
    width 100%
  .widget
    background #fff
    box-shadow shadow-style
    margin-bottom 30px
    word-wrap break-word
    .title
      padding 15px 20px
      font-size 1em
      border-bottom 1px solid color-border
      font-weight normal

    .entry
      font-size 0.9em
      padding 15px 20px

    ul, ol, dl
      list-style none
      ul, ol, dl
        list-style disc
        margin-left 20px

  .search
    margin-bottom 30px
    input
      background #fff
      font-family font-title
      font-style italic
      font-size 1em
      padding 10px 15px
      border 1px solid color-border
      width 100%
      box-sizing border-box
      color color-meta
      &:focus
        color color-font

  .tag
  	background color-purple
  	box-shadow shadow-purple
  	.title
  	  color #fff
  	  border-bottom 1px solid border-purple
  	a
  	  color #fff
    small
      margin-left 15px
      color border-light-purple
      &:before
        content '('
      &:after
        content ')'

  .recent-blog
    background color-yellow
    box-shadow shadow-yellow
    .title
      color #fff
      border-bottom 1px solid border-yellow
    a
      color #fff
    li
      border-bottom none
      padding 0
  
  .twitter
    li
      border-bottom 1px solid color-border
      padding 15px 20px
      font-size 0.9em
      &:last-of-type
        border-bottom none
    small
      display block
      margin-top 10px
      color color-meta
      line-height 1

  .tagcloud
  	background color-green
  	box-shadow shadow-green
  	.title
  	  color #fff
  	  border-bottom 1px solid border-green
    .entry
      padding-right 5px
    a
      color #fff
      margin-right 10px
      display inline-block
  
  .about-me
    background color-red
    box-shadow shadow-red
    .title
      color #fff
      border-bottom 1px solid border-red
    a
      color #fff